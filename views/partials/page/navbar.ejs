<!-- Log Out Modal Window -->

<div class="modal hide fade" id="logOutModal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button class="close" data-dismiss="modal">&times;</button>
				<h3>Log Out</h3>
			</div>
			<div class="modal-body">
				<form action="/logout" method="post">
					<p>You are now logged out.</p>
					<p>Have a good day, <%= user %> !</p>
				</form>
			</div>
		</div>
	</div>
</div> <!-- end of log out modal window -->


<!-- Log In Modal Window -->

<div class="modal hide fade" id="logInModal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button class="close" data-dismiss="modal">&times;</button>
				<h3>Log In</h3>
			</div>
			<div class="modal-body">
				<form method="post" action="/login">
					<div class="form-group">
						<input type="text" name="username" placeholder="Username.." id="userLogin" class="form-control">
					</div>
					<br>
					<div class="form-group">
						<input type="password" name="password" placeholder="Password.." id="passwordLogin" class="form-control">
					</div>
					<br>
					<div class="form-group">
						<div class="checkbox">
							<label><input type="checkbox" id="checkbox"> Remember me</label>
						</div>
					</div>
					<br>
					<div  class="form-group" style="float:left">
						<div>
						  <button id="loginBtn" class="btn btn-primary" type="submit" onClick="remember_me()" >Log In</button>
						</div>
					</div>

				</form>
			</div>
			<div class="modal-footer">
				<a href="" class="btn btn-primary" onclick="window.opener.location.reload();tb_remove()" >Cancel</a>
			</div>
		</div>
	</div>
</div><!-- end of login modal window -->


<!-- Sign Up Modal window -->

<div class="modal hide fade" id="signUpModal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button class="close" data-dismiss="modal">&times;</button>
				<h3>Sign Up</h3>
			</div>
			<div class="modal-body">
				<form method="post" action="/signup">
					<div class="form-group">
						<input type="text" name="username" placeholder="Username.." id="userSignup" class="form-control">
					</div>
					<br>
					<div class="form-group">
						<input type="password" name="password" placeholder="Password.." id="passwordSignup" class="form-control">
					</div>
					<br>
					<div class="form-group">
						<input type="email" name="email" placeholder="Email address.." id="emailSignup" class="form-control">
					</div>
					<br>
					<div class="form-group ">
						<input type="text" name="firstname" placeholder="First name.." id="firstNameSignup" class="form-control">
					</div>
					<br>
					<div class="form-group ">
						<input type="text" name="lastname" placeholder="Last name.." id="lastNameSignup" class="form-control">
					</div>
					<br>
					<div  class="form-group" style="float:left">
						<div>
						  <button class="btn btn-primary" type="submit">Sign Up</button>
						</div>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<a href="" class="btn btn-primary">Cancel</a>
			</div>
		</div>
	</div>
</div><!-- end of signup modal window -->



